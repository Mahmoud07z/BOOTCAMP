<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>

    <div class="container mt-4">
      <h2>Search Facts</h2>

      <form action="/search/title" method="POST" class="mb-3">
        <label for="title" class="form-label">Search by Title</label>
        <input type="text" name="title" id="title" class="form-control" placeholder="Enter title" required />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
      </form>

      <form action="/search/category" method="POST" class="mb-3">
        <label for="category" class="form-label">Search by Category</label>
        <select name="category" id="category" class="form-select" required>
          <option value="" disabled selected>Select category</option>
          <option value="Animals">Animals</option>
          <option value="Science">Science</option>
          <option value="History">History</option>
          <!-- add more if you want -->
        </select>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
      </form>
    </div>

    <% include ../partials/posts.ejs %>
    <% include ../partials/footer.ejs %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
